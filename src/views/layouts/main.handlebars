    <!-- Modal Registrarse-->
    <section class="modal fade" id="registrarseModal" tabindex="-1" aria-labelledby="registrarseModal" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header bg-color-principal">
                <h5 class="modal-title text-white" id="registrarseModal">
                Registarse
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body bg-color-fondo">
                <form id="form-registro" action="http://localhost:8081/user" method="POST">
                <div class="mb-3">
                    <label for="nombreRegistro" class="form-label fw-bolder">Nombre</label>
                    <input type="text" class="form-control bg-input" id="nombreRegistro" placeholder="Ingrese su nombre"
                    minlength="3" maxlength="25" name="nombre" required />
                    <div id="nombreErrorRegistro"></div>
                </div>
                <div class="mb-3">
                    <label for="apellidoRegistro" class="form-label fw-bolder">Apellido</label>
                    <input type="text" class="form-control bg-input" id="apellidoRegistro" placeholder="Ingrese su apellido"
                    minlength="3" maxlength="25" name="apellido" required />
                    <div id="apellidoErrorRegistro"></div>
                </div>
                <div class="mb-3">
                    <label for="emailRegistro" class="form-label fw-bolder">Email</label>
                    <input type="email" class="form-control bg-input" id="emailRegistro" aria-describedby="emailHelp"
                    placeholder="Ingrese su email" minlength="8" maxlength="20" name="email" autocomplete="username"
                    required />
                    <div id="emailErrorRegistro"></div>
                </div>
                <div class="mb-3">
                    <label for="telefonoRegistro" class="form-label fw-bolder">Teléfono</label>
                    <input type="tel" class="form-control bg-input" id="telefonoRegistro" placeholder="Ingresa tu teléfono"
                    maxlength="10" pattern="\d{10}" name="telefono" required />
                    <div id="telefonoErrorRegistro"></div>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button type="submit" id="botonRegistrarse" class="btn btn-personalized-3 mx-1 fw-bold"
                    aria-label="Registrarse">
                    Registrarse
                    </button>
                    <button type="reset" class="btn btn-personalized-1 mx-1 fw-bold" aria-label="Cancelar">
                    Cancelar
                    </button>
                </div>
                </form>
            </div>
            </div>
        </div>
    </section>

    <!-- Modal Iniciar Sesión-->
    <section class="modal fade" id="iniciarSesionModal" tabindex="-1" aria-labelledby="iniciarSesionModal"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            <div class="modal-header bg-color-principal">
                <h5 class="modal-title text-white" id="iniciarSesionModal">
                Iniciar Sesión
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body bg-color-fondo">
                <form id="form-iniciar-sesion">
                <div class="mb-3">
                    <label for="email-iniciar-sesion" class="form-label fw-bolder">Email</label>
                    <input type="email" class="form-control bg-input" id="email-iniciar-sesion" aria-describedby="emailHelp"
                    placeholder="Ingrese su email" minlength="5" maxlength="254" name="Email" autocomplete="username"
                    required pattern="^[\w-\.]+@([\w-]+\.)+[\w-]{2,4}$" />
                    <div id="emailErrorIniciarSesion"></div>
                </div>
                <div class="mb-3">
                    <label for="password-iniciar-sesion" class="form-label fw-bolder">Contraseña</label>
                    <input type="password" class="form-control bg-input" id="password-iniciar-sesion"
                    placeholder="Ingrese su contraseña" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])[^\W_]{6,16}$"
                    title="Debe contener al menos un número, una letra mayúscula, una letra minúscula, y tener entre 6 y 16 caracteres"
                    maxlength="16" minlength="6" name="Contraseña" autocomplete="current-password" required />
                    <div id="passwordErrorIniciarSesion"></div>
                </div>
                <div class="mb-3">
                    <div class="form-text"><a class="link-dark link-offset-2 link-underline link-underline-opacity-0" href="#">Olvidé mi contraseña</a></div>
                </div>
                <div class="d-flex align-items-center justify-content-center">
                    <button type="submit" class="btn btn-personalized-3 mx-1 fw-bold" aria-label="Ingresar">
                    Ingresar
                    </button>
                    <button type="reset" class="btn btn-personalized-1 mx-1 fw-bold" aria-label="Cancelar">
                    Cancelar
                    </button>
                </div>
                </form>
            </div>
            </div>
        </div>
    </section>

